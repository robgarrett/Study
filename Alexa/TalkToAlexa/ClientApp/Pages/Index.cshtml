@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-12">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-action="Login" asp-controller="Account" class="btn btn-default">Log In with Amazon</a>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <h4>@Model.AmazonName</h4>
                    <p><i class="fab fa-github"></i>@Model.AmazonEmail</p>
                </div>
            </div>
        }
    </div>
</div>